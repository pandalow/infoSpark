{
    "name": "apply day",
    "description": "Apply day theme",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "dist/index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "web_accessible_resources": [
    {
      "resources": [
        "dist/pdf.worker.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}