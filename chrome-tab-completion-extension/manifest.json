{
  "manifest_version": 3,
  "name": "Copilot Web - AI Text Completion",
  "version": "1.0.0",
  "description": "AI-powered text completion and chat assistant for web text editors with Chrome's built-in AI",
  "minimum_chrome_version": "138",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "action": {
    "default_title": "Open AI Assistant"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content/ghost-overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}