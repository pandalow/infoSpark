{
  "manifest_version": 3,
  "name": "INFOSpark AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered text completion and chat assistant for web text editors with Chrome's built-in AI",
  "minimum_chrome_version": "138",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "Open AI Assistant"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "logo.png"
  }
}